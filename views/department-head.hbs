<h1>Department Head Dashboard</h1>

<div style="text-align: right; margin-bottom: 20px;">
    <form action="/logout" method="POST" style="display:inline;">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button type="submit" class="btn btn-primary">Logout</button>
    </form>
</div>

{{#if message}}
    <div class="alert alert-danger">{{message}}</div>
{{/if}}

<div class="card">
    <div class="card-header">Request Queues</div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Pending Requests</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each queues}}
                    <tr>
                        <td>{{this.category}}</td>
                        <td>{{this.count}}</td>
                        <td>
                            <a href="/department-head/queue/{{this.category}}" class="btn btn-primary btn-sm">View Queue</a>
                        </td>
                    </tr>
                {{else}}
                    <tr>
                        <td colspan="3">No pending requests.</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <div style="margin-top: 20px;">
            <a href="/department-head/random-request" class="btn btn-primary">I don't know where to begin!</a>
        </div>
    </div>
</div>