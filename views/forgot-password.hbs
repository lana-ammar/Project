<h1>Forgot Password</h1>

{{#if message}}
    <div class="alert {{#if (eq message 'Email found. Please enter your new password.')}}alert-success{{else}}alert-danger{{/if}}">
        {{message}}
    </div>
{{/if}}

<div class="card">
    <div class="card-header">Reset Your Password</div>
    <div class="card-body">
        <form id="forgotPasswordForm" action="/forgot-password" method="POST">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <div>
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" class="form-control" value="{{email}}" required>
            </div>
            {{#if showPasswordField}}
                <div>
                    <label for="password" class="form-label">New Password</label>
                    <div class="input-group">
                        <input type="password" id="password" name="password" class="form-control" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <input type="checkbox" id="showPassword" onclick="togglePassword('password')">
                                <label for="showPassword" class="ms-1 mb-0">Show</label>
                            </div>
                        </div>
                    </div>
                </div>
            {{/if}}
            <button type="submit" class="btn btn-primary">
                {{#if showPasswordField}}Reset Password{{else}}Check Email{{/if}}
            </button>
        </form>
        <div class="toggle-form">
            <p>Remembered your password? <a href="/">Login here</a></p>
            <p>Don't have an account? <a href="/register">Register here</a></p>
        </div>
    </div>
</div>

{{#section 'scripts'}}
<script>
function togglePassword(id) {
    const input = document.getElementById(id);
    input.type = input.type === 'password' ? 'text' : 'password';
}
</script>
{{/section}}